{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "SixModLoader/SixModLoader.csproj",
            "SixModLoader.Api/SixModLoader.Api.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api",
      "filter": "filter_config.yml"
    }
    // TODO https://github.com/dotnet/docfx/issues/5501
    //    {
    //      "src": [
    //        {
    //          "src": "%SCPSL_SERVER%/SCPSL_Data/Managed",
    //          "files": [
    //            "Assembly-CSharp.dll",
    //            "Assembly-CSharp-firstpass.dll",
    //            "CommandSystem.Core.dll",
    //            "Mirror.dll",
    //            "UnityEngine.dll",
    //            "UnityEngine.CoreModule.dll"
    //          ]
    //        }
    //      ],
    //      "dest": "scpsl"
    //    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "scpsl/**.yml"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      },
      {
        "files": [
          "logo.svg",
          "favicon.ico",
          "fonts/Axis.otf"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appFooter": "© 2020 SixModLoader",
      "_enableSearch": "true"
    },
    "template": [
      "default",
      "templates/material"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "noLangKeyword": false
  }
}